<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Just Vibe | Social</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/social.css">
</head>
<body>
    <div class="app-container">
        <!-- Horizontal Navbar -->
        <nav class="horizontal-nav">
            <div class="profile-nav">
                <img src="<%= user.profilePicture %>" alt="Profile">
                <div class="profile-tooltip"><%= user.username %></div>
            </div>
            
            <h1 class="logo">Just Vibe</h1>
            
            <div class="nav-links">
                <a href="#" class="nav-link">Discover</a>
                <a href="#" class="nav-link">Notifications</a>
            </div>
        </nav>

        <!-- Vertical Navbar -->
        <nav class="vertical-nav">
            <div class="nav-icon active">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
            </div>
            
            <div class="nav-icon" id="createPostBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
            </div>
            
            <div class="nav-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
            </div>
            
            <div class="nav-icon">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
            </div>
            
            <div class="nav-icon theme-toggle-container">
                <div class="theme-toggle" id="themeToggle"></div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="posts-grid" id="postsContainer">
                <!-- Posts will be dynamically inserted here -->
            </div>
        </main>
    </div>

    <!-- Create Post Modal -->
    <div class="modal-overlay" id="createPostModal">
        <div class="create-post-modal">
            <div class="modal-header">
                <h3 class="modal-title">Create Post</h3>
                <button class="close-modal" id="closeModal">&times;</button>
            </div>
            <form class="post-form" id="postForm">
                <div class="post-header">
                    <img src="<%= user.profilePicture %>" alt="Profile" class="post-profile">
                    <div>
                        <div class="post-user"><%= user.username %></div>
                    </div>
                </div>
                <textarea class="post-input" id="postInput" placeholder="What's on your mind?" required></textarea>
                <button type="submit" class="post-submit">Post</button>
            </form>
        </div>
    </div>

    <!-- Comments Modal -->
    <div class="modal-overlay" id="commentsModal">
        <div class="comments-modal">
            <div class="comments-header">
                <h3>Comments</h3>
            </div>
            <div class="comments-body" id="commentsBody">
                <!-- Comments will be inserted here -->
            </div>
            <div class="comment-input-container">
                <input type="text" class="comment-input" id="commentInput" placeholder="Write a comment...">
            </div>
        </div>
    </div>

    <script src="/js/social.js"></script>
</body>
</html>